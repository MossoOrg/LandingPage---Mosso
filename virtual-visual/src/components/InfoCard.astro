---
// src/components/InfoCard.astro
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  buttonText: string;
  buttonHref: string;
}
const { title, description, imageUrl, buttonText, buttonHref } = Astro.props;
---
<div class="bg-white rounded-lg shadow-lg overflow-hidden">
  <img src={imageUrl} alt={title} class="w-full h-48 object-cover"/>
  <div class="p-6 text-center">
    <h3 class="text-2xl font-bold text-slate-900">{title}</h3>
    <p class="mt-2 text-slate-600">{description}</p>
    <div class="mt-6">
      <a href={buttonHref} class="inline-block bg-[#030027] text-white font-bold text-base px-8 py-3 rounded-full hover:bg-opacity-80 transition-transform duration-300 ease-in-out transform hover:scale-105">
        {buttonText}
      </a>
    </div>
  </div>
</div>