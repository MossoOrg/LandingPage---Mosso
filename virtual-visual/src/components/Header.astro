---
// src/components/Header.astro
---

{/* Añadimos 'relative' para que el menú desplegable se posicione correctamente */}
<header class="bg-[#030027] py-4 px-6 md:px-8 relative z-50">
  <nav class="flex justify-between items-center text-white">
    <div class="flex items-center gap-4">
      <a href="/" class="text-3xl font-bold font-mplus">Mosso</a>
    </div>

    <div class="hidden md:flex items-center gap-8 font-sans text-lg">
      <a href="/inicio" class="hover:text-gray-300 transition-colors">Inicio</a>
      <a href="/conoce-mas" class="hover:text-gray-300 transition-colors">Conoce más</a>
      <a href="/nosotros" class="hover:text-gray-300 transition-colors">Acerca de Nosotros</a>
    </div>

    <div class="hidden md:flex items-center gap-6 font-sans text-lg">
      <a href="/login" class="hover:text-gray-300 transition-colors">Iniciar Sesión</a>
      <a href="/registro" class="bg-white text-[#030027] px-5 py-2 rounded-lg font-bold hover:bg-gray-200 transition-colors">Registrarse</a>
    </div>

    <div class="md:hidden">
      <button id="hamburger-button" class="text-white focus:outline-none">
        {/* Icono de Hamburguesa */}
        <svg id="hamburger-icon" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m4 6H4" />
        </svg>
        {/* Icono de Cierre (X) - Oculto por defecto */}
        <svg id="close-icon" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden absolute top-full left-0 w-full bg-slate-900 bg-opacity-95 backdrop-blur-sm">
    <div class="flex flex-col items-center gap-6 py-8 text-xl font-sans text-white">
    <a href="/inicio" class="hover:text-gray-300 transition-colors">Inicio</a>
    <a href="/conoce-mas" class="hover:text-gray-300 transition-colors">Conoce más</a>
    <a href="/nosotros" class="hover:text-gray-300 transition-colors">Acerca de Nosotros</a>
    <hr class="w-2/3 border-slate-700" />
    <a href="/login" class="hover:text-gray-300 transition-colors">Iniciar Sesión</a>
    <a href="/registro" class="w-2/3 text-center bg-white text-[#030027] px-5 py-2 rounded-lg font-bold hover:bg-gray-200 transition-colors">Registrarse</a>
  </div>
  </div>
</header>

<script>
  // Obtenemos los elementos del DOM por su ID
  const hamburgerButton = document.getElementById('hamburger-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const hamburgerIcon = document.getElementById('hamburger-icon');
  const closeIcon = document.getElementById('close-icon');

  // Añadimos un 'escuchador' de eventos al botón
  hamburgerButton.addEventListener('click', () => {
    // Alternamos la clase 'hidden' en el menú para mostrarlo/ocultarlo
    mobileMenu.classList.toggle('hidden');
    // Alternamos la visibilidad de los iconos de hamburguesa y cierre
    hamburgerIcon.classList.toggle('hidden');
    closeIcon.classList.toggle('hidden');
  });
</script>