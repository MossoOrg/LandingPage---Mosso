---
// src/components/ServiceCard.astro
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  imageUrl: string;
}
const { title, description, imageUrl } = Astro.props;
---
<div class="text-center">
  <h3 class="text-2xl font-bold text-slate-800">{title}</h3>
  <div class="mt-4 flex justify-center">
    <img src={imageUrl} alt={title} class="rounded-[2rem] object-cover h-64 w-64" />
  </div>
  <p class="mt-4 text-slate-600">{description}</p>
</div>