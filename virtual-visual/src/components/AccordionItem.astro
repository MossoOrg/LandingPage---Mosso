---
// src/components/AccordionItem.astro
interface Props {
  question: string;
  answer: string;
}
const { question, answer } = Astro.props;
---

<div class="border-b border-gray-200 py-4">
  {/* El bot√≥n que activa el despliegue */}
  <button class="accordion-trigger flex w-full items-center justify-between text-left text-lg font-medium text-slate-800">
    <span>{question}</span>
    <span class="accordion-icon">
      <svg
        class="h-6 w-6 transform transition-transform duration-300"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </span>
  </button>

  {/* El panel con la respuesta, oculto por defecto */}
  <div class="accordion-content overflow-hidden transition-all duration-300 ease-in-out">
    <p class="pt-4 text-base text-slate-600">
      {answer}
    </p>
  </div>
</div>