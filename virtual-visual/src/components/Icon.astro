---
// src/components/Icon.astro
import { ICONS } from '../data/icons.ts';

interface Props {
  name: string;
  className?: string;
}

const { name, className = "h-8 w-8" } = Astro.props;

const pathData = ICONS[name] || ''; // Si el Ã­cono no existe, no muestra nada.
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  class={className}
  fill="none"
  viewBox="0 0 24 24"
  stroke="currentColor"
  stroke-width="1.5"
>
  <path stroke-linecap="round" stroke-linejoin="round" d={pathData}></path>
</svg>